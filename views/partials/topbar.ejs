        <button id="toggleSidebar" class="mobile-only">â˜°</button>
        <div class="breadcrumbs">
            <% if (currentQuestion) { %>
                <span class="crumb-chapter"><%= currentQuestion.chapter %></span> 
                <span class="crumb-separator">/</span> 
                <span class="crumb-title"><%= currentQuestion.title %></span>
